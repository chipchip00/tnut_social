<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <!--  This file has been downloaded from bootdey.com  on twitter -->
    <!--  All snippets are MIT license http://bootdey.com/license -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!--SignalR script to update the chat page and send messages.-->
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.min.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/asset/css/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    @RenderSection("Styles", false)
    
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.all.min.js"></script>

    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
</head>
<body>
    <div class="container-fluid nvbar1">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <img src="~/asset/images/logo_tnut_social.jpg"  alt="Logo TNUT Social" />
            <a class="navbar-brand" href="/home">TNUT Social</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">@Html.ActionLink("Trang chủ", "Index", "Home", new object { },new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Profile", "Index", "Profile", new object { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Nhóm", "Index", "Group", new object { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Tài liệu", "Index", "TaiLieu", new object { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Tin nhắn", "Index", "chat", new object { }, new { @class = "nav-link" })</li>

                </ul>
                <form class="form-inline my-2 my-lg-0" action="/search" method="get">
                    <input class="form-control mr-sm-2" type="search" id="txtInputSearch" name="searchString" placeholder="Search" aria-label="Search" value="@ViewBag.searchString">
                    <button class="btn btn-outline-success my-2 my-sm-0" id="btnSearch" type="submit">Tìm kiếm</button>
                </form>
            </div>
        </nav>

    </div>
    <!-- Navbar -->
    @RenderBody()
</body>
</html>
