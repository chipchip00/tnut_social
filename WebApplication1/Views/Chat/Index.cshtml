
@{
    ViewBag.Title = "Chat";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <!--  This file has been downloaded from bootdey.com  on twitter -->
    <!--  All snippets are MIT license http://bootdey.com/license -->
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <!--SignalR script to update the chat page and send messages.-->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/asset/css/chat.css" rel="stylesheet" />
    <script src="~/asset/js/Chat_jquery.js"></script>
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/asset/js/Chat.js"></script>
</head>
<body>

    <div class="container" id="all-chat-style">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card chat-app">
                    <div id="plist" class="people-list">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-search"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Search...">
                        </div>
                        <ul class="list-unstyled chat-list mt-2 mb-0">

                            @foreach (var nguoi_nhan in ViewBag.list_nguoi_nhan)
                            {
                            <li class="clearfix nguoi_nhan" id="@nguoi_nhan.uid">

                                <img src="~/asset/images/avatar/@nguoi_nhan.anh" />
                                <div class="about">
                                    <div class="name">@nguoi_nhan.ho_ten</div>
                                    <div class="status"> <i class="fa fa-circle offline"></i> left 7 mins ago </div>
                                </div>
                            </li>
                            }

                        </ul>
                    </div>
                    <div class="chat">
                        <div class="chat-header clearfix">
                            <div class="row">
                                <div class="col-lg-6">
                                    <a href="javascript:void(0);" data-toggle="modal" data-target="#view_info">
                                        <img src="~/asset/images/avatar/@ViewBag.nguoi_nhan.anh" alt="avatar" />
                                    </a>
                                    <div class="chat-about">
                                        <h6 class="m-b-0">@ViewBag.nguoi_nhan.ho_ten</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="chat-history">
                            <ul class="m-b-0" id="discussion">
                                @if (ViewBag.nd_chat != null)
                                {
                                    foreach (var message in ViewBag.nd_chat)
                                    {
                                        string class_time = "message-data text-right";
                                        string class_message = "message other-message float-right";

                                        if (Session["username"].ToString().ToLower() != message.uid.ToLower())
                                        {
                                            class_time = "message-data";
                                            class_message = "message my-message";
                                        }

                                        <li class="clearfix">
                                            <div class="@class_time">
                                                <span class="message-data-time">@message.time</span>
                                            </div>
                                            <div class="@class_message"> @message.noi_dung </div>
                                        </li>

                                    }
                                }

                            </ul>
                        </div>
                        <div class="chat-message clearfix">
                            <div class="input-group mb-0">
                                <div class="input-group-prepend" id="sendmessage">
                                    <span class="input-group-text"><i class="fa fa-send"></i></span>
                                </div>
                                <input type="text" class="form-control" id="message" placeholder="Enter text here...">
                                <input type="hidden" id="displayname" value="@Session["username"].ToString()" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


</body>
</html>
